{
  "name": "ddsc_launcher",
  "version": "1.1.1",
  "license": "GPL-3.0",
  "files": [
    "LICENSE.md"
  ],
  "description": "Launcher de mods para DDLC",
  "main": "./out/main/index.js",
  "author": "dokidokispanish.club",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@babel/core": "^7.25.2",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@vue/compiler-sfc": "^3.5.0",
    "animate.css": "^4.1.1",
    "aos": "^2.3.4",
    "axios": "^1.7.7",
    "check-disk-space": "^3.4.0",
    "electron-updater": "^6.2.1",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21",
    "node-disk-info": "^1.3.0",
    "sweetalert2": "^11.6.13",
    "unzipper": "^0.12.3",
    "vue-router": "^4.4.3",
    "vue-sweetalert2": "^5.0.11",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.5",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "vite": "^5.3.1",
    "vue": "^3.4.30",
    "vue-loader": "^17.4.2"
  },
  "build": {
    "appId": "club.dokidokispanish.ddsc_launcher",
    "productName": "DDSC Launcher",
    "icon": "resources/Logo_DDSC-ico.ico",
    "copyright": "Copyright Â© 2024 dokidokispanish.club",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "out/**/*",
      "main.js",
      "package.json",
      "./public/**/*"
    ],
    "extraResources": [
      "./public/Logo_DDSC-ico.ico"
    ],
    "directories": {
      "output": "build",
      "buildResources": "public"
    },
    "win": {
      "icon": "./public/Logo_DDSC-ico.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://www.dokidokispanish.club/ddsc_launcher/actualizaciones/"
      }
    ]
  }
}
